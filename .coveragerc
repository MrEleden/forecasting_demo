# Coverage.py configuration for ML Forecasting Portfolio
# Focus on core implementation: data, models, pipelines, training
# Enforces 90% minimum coverage on these modules (excludes engine.py)

[run]
source =
    src/ml_portfolio/data
    src/ml_portfolio/models
    src/ml_portfolio/evaluation
    src/ml_portfolio/training
omit =
    */tests/*
    */conftest.py
    */__pycache__/*
    */site-packages/*
    */migrations/*
    */venv/*
    */.venv/*
    */training/engine.py
    */utils/*
    */evaluation/benchmark.py
    */models/statistical/arima.py
    */models/statistical/prophet.py
    */models/statistical/sarimax.py

[report]
# Current baseline: 36.23% for core ML modules (data, models, pipelines, training - excluding engine.py)
fail_under = 36
precision = 2
show_missing = True
skip_covered = False

# Report formatting
exclude_lines =
    # Exclude lines from coverage
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == "__main__":
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod
    pass

[html]
directory = htmlcov

[xml]
output = coverage.xml
